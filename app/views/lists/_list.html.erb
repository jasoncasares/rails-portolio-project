<% if @list.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@list.errors.count, "error") %>
      prohibited this list from being saved:
    </h2>

    <ul>
    <% @list.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @list do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :due_date %>
  <%= f.date_field :due_date %><br>

  <%= f.fields_for :categories do |category_builder| %>
  <fieldset>
    <%= category_builder.label :name, 'Category' %>
    <%= category_builder.text_field :name %><br>
  </fieldset>
  <% end %>

  <%= f.submit %>
<% end %>
