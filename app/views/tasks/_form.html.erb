<% if task.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(task.errors.count, "error") %>
      prohibited this task from being saved:
    </h2>

    <ul>
    <% task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for ([@list, task]) do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %><br>
<% end %><br>
